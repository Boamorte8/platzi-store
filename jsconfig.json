{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "NodeNext",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@containers/*": ["./src/containers/*"],
      "@context/*": ["./src/context/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@routes/*": ["./src/routes/*"],
      "@styles/*": ["./src/styles/*"]
    }
  }
}
